                                <div class="row clearfix">
                                    <div class="col-md-2 column">
                                        <img class="img-responsive" src="@item.ImageUrl" />
                                    </div>

                                    <div class="col-md-10 column">
                                        <div class="row clearfix">
                                            <div class="col-md-12 column">
                                                <p>@Html.DisplayFor(modelItem => item.Name)</p>
                                            </div>
                                        </div>
                                        <div class="row clearfix">
                                            <div class="col-md-12 column">
                                                <p>@Html.DisplayFor(modelItem => item.Author)/@Html.DisplayFor(modelItem => item.Publisher)/￥@String.Format("{0:N2}", item.Price) </p>
                                            </div>
                                        </div>
                                        <div class="row clearfix">
                                            <div class="col-md-12 column">
                                                <p>评分:@String.Format("{0:N1}", item.Rank)</p>
                                            </div>
                                        </div>
                                        <div class="row clearfix">
                                            <div class="col-md-12 column">
                                                <p>
                                                    简介   @Html.DisplayFor(modelItem => item.Details)
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <hr />
                            }

                        }
